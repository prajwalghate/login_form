doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
        a.navbar-brand(href='#') NodeAuth
        |     
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        |     
        #navbarCollapse.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
            li(class=(title=='Members' ? 'active':''))
              a.nav-link(href='/') Members 
                //span.sr-only (current)
            if !user
                li(class=(title=='Register' ? 'active':''))
                  a.nav-link(href='/users/registers') Register        
                li(class=(title=='Login' ? 'active':''))
                  a.nav-link(href='/users/login') LogIn
          ul.navbar-nav.navbar-right
            if user
                li.nav-item.active
                  a.nav-link(href='/users/logout')
                    | LogOut 
         
    .container
        != messages()
        block content
        
    script( src='http://ajax.googleapis.com/ajax/libs/jquer/1.11.1/jquery.min.js')
    script( src='/javascripts/bootstrap.js')
